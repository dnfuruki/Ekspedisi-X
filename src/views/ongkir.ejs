<!DOCTYPE html>
<html>
  <head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1" />
    <title>Data Ongkir</title>
    <link
      rel="stylesheet" href="/css/bulma.min.css"
    />
    <link rel="stylesheet" href="/css/style.css" />
    <link rel="stylesheet" href="https://cdnjs.cloudflare.com/ajax/libs/font-awesome/6.2.0/css/all.min.css"/>

    <link
      rel="stylesheet" href="/css/all.min.css"
    />
    <link rel="stylesheet" href="/css/dataTables.bulma.min.css" />
  </head>
  <body>
    <script src="/js/jquery-3.6.0.min.js"></script>
    <script src="/js/jquery.nicescroll.min.js"></script>
    <script src="/js/jquery.dataTables.min.js"></script>
    <script src="/js/dataTables.bulma.min.js"></script>
    <script src="https://code.jquery.com/jquery-3.5.1.min.js" crossorigin="anonymous"></script>
    <script src="https://cdn.jsdelivr.net/npm/popper.js@1.16.0/dist/umd/popper.min.js" integrity="sha384-Q6E9RHvbIyZFJoft+2mJbHaEWldlvI9IOYy5n3zV9zzTtmI3UksdQRVvoxMfooAo" crossorigin="anonymous"></script>
    <script src="https://stackpath.bootstrapcdn.com/bootstrap/4.4.1/js/bootstrap.min.js" integrity="sha384-wfSDF2E50Y2D1uUdj0O3uMBJnjuUD4Ih7YwaYd1iqfktj0Uod8GCExl3Og8ifwB6" crossorigin="anonymous"></script>
   
    <div class="columns">
      <div class="column is-2">
        <!-- Sidebar -->
        <div class="bg-custom menu-container px-1 pl-5 pr-5">
          <div class="menu-wrapper">
            <aside class="menu">
              <a href="#" class="logo ml-4">
                <img src="./assets/logo.png" width="150px" alt="" />
              </a>
              <ul class="menu-list">
                <li>
                  <a href="/"><i class="fas fa-thin fa-house mr-3"></i>Home</a>
                </li>
                <li>
                  <a href="/user"><i class="fas fa-thin fa-user mr-3"></i>User</a>
                </li>
                <li>
                  <a href="/cabang"><i class="fas fa-thin fa-code-branch mr-3"></i>Cabang</a>
                </li>
                <li>
                  <a href="/order"><i class="fas fa-thin fa-cart-shopping mr-3"></i>Order</a>
                </li>
                <li>
                  <a href="ongkir"><i class="fas fa-thin fa-truck-fast mr-3"></i>Ongkir</a>
                </li>
              </ul>
            </aside>
          </div>
        </div>
        <!-- Sidebar -->
      </div>
      <!-- Content -->
      <div class="column is-10 mt-3 ">
        <div
          class="is-flex is-justify-content-space-between is-align-items-center"
        >
          <div class="list-container">
            <nav class="breadcrumb" aria-label="breadcrumbs">
              <h3 class="is-size-2">Ongkir</h3>
              <ul>
                <li><a href="/">Home</a></li>
                <li><a href="/ongkir">Ongkir</a></li>
              </ul>
            </nav>
          </div>
          <button class="button mr-5 js-modal-trigger" data-toggle="modal" data-target="#myModalAdd">+ Add Ongkir</button>
        </div>
        <div class="is-flex is-justify-content-center">

          <div class="card fullwidth">
            <div class="card-content fullwidth">
              <table class="table fullwidth" id="mytable">
                <thead> 
                  <tr>
                     <th>ID Ongkir</th>
                     <th>Asal</th>
                     <th>Tujuan</th>
                     <th>Harga</th>
                     <th>Action</th>
                  </tr>
                </thead>
                <tbody>
                    <% dataOngkir.forEach(item => { %>
                        <tr>
                          <td><%= item.id_ongkir %></td>
                          <td><%= item.asal%></td>
                          <td><%= item.tujuan%></td>
                          <td><%= item.harga%></td>
                          <td>
                            <a href="javascript:void(0);" class="button mr-5 js-modal-trigger edit" data-id="<%= item.id_ongkir%>" data-asal="<%= item.asal%>" data-tujuan="<%= item.tujuan%>" data-harga="<%= item.harga%>">Edit</a>
                            <a href="javascript:void(0);" class="button mr-5 js-modal-trigger delete" data-id="<%= item.id_ongkir%>">Delete</a>
                          </td>
                        </tr>
                        <%})%>
                </tbody>
              </div>
            </div>
          </div>
        </div>
            </table>
          </div>
      <!-- Content -->
      <!-- Modal -->
      <form action="/tambah_ongkir" method="post">
      <div id="myModalAdd"  class="modal">
        <div class="modal-background"></div>
        <div class="modal-content">
          <div class="box">
            <h3 class="is-size-3">Input Ongkir</h3>
            <div class="columns is-justify-content-center is-align-content-center is-text-centered">
              <div class=" column">
                <p>Asal</p>
                <input type="text" name="asal" class="form-control" placeholder="Asal" required>
              </div>
              <div class=" column">
                <p>Tujuan</p>
                <input type="text" name="tujuan" class="form-control" placeholder="Tujuan" required>
              </div>
              <div class=" column">
                <p>Harga</p>
                <input type="text" name="harga" class="form-control" placeholder="Harga" required>
              </div>
              
              
            </div>
            
            <div class="columns">
              <div class="column is-10"></div>
              <div class="column">
                <button type="submit" class="button">Save</button>
              </div>
            </div>
          </div>
        </div>
        <button class="modal-close is-large" aria-label="close"></button>
      </div>
    </form>


    <form action="/edit_ongkir" method="post">
      <div id="EditModal"  class="modal">
        <div class="modal-background"></div>
        <div class="modal-content">
          <div class="box">
            <h3 class="is-size-3">Edit Ongkir</h3>
            <div class="columns is-justify-content-center is-align-content-center is-text-centered">
              <div class=" column">
                <p>Asal</p>
                <input type="text" name="asal" class="form-control asal" placeholder="Asal" required>
              </div>
              <div class=" column">
                <p>Tujuan</p>
                <input type="text" name="tujuan" class="form-control tujuan" placeholder="Tujuan" required>
              </div>
              <div class=" column">
                <p>Harga</p>
                <input type="text" name="harga" class="form-control harga" placeholder="Harga" required>
              </div>
            </div>
            <div class="columns">
              <div class="column is-10"></div>
              <div class="column">
                <input type="hidden" name="id_ongkir" class="id_ongkir">
                <button type="submit" class="button">Update</button>
              </div>
            </div>
          </div>
        </div>
        <button class="modal-close is-large" aria-label="close"></button>
      </div>
    </form>


    <form action="/hapus_ongkir" method="post">
      <div id="DeleteModal"  class="modal">
        <div class="modal-background"></div>
        <div class="modal-content">
          <div class="box">
            <h3 class="is-size-3">Hapus Ongkir</h3>
            <div class="columns is-justify-content-center is-align-content-center is-text-centered">
              <div class=" column">
                <strong>Anda yakin mau menghapus data ini?</strong>
              </div>
            </div>
            <div class="columns">
              <div class="column is-10"></div>
              <div class="column">
                <input type="hidden" name="id_ongkir" class="form-control id_ongkir2" required>
                <button type="submit" class="button">Delete</button>
              </div>
            </div>
          </div>
        </div>
        <button class="modal-close is-large" aria-label="close"></button>
      </div>
    </form>

<script>
    $(document).ready(function(){
            //tampilkan data ke modal untuk edit
      $('#mytable').on('click','.edit',function(){
        var id_ongkir = $(this).data('id');
        var asal = $(this).data('asal');
        var tujuan = $(this).data('tujuan');
        var harga = $(this).data('harga');
        $('#EditModal').modal('show');
        $('.asal').val(asal);
        $('.tujuan').val(tujuan);
        $('.harga').val(harga);
        $('.id_ongkir').val(id_ongkir);
      });
            //tampilkan modal hapus record
            $('#mytable').on('click','.delete',function(){
        var id_ongkir = $(this).data('id');
        $('#DeleteModal').modal('show');
        $('.id_ongkir2').val(id_ongkir);
      });
 
    });
</script>

  </body>
</html>
